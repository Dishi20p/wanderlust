<% layout("/layouts/boilerplate")%>
  <body>
    <style>
      #filters{
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-bottom: 2rem;
      }
      
      .filters{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
      }
      
      .filters:hover{
        opacity: 1;
        cursor: pointer;
      }

      .tax-i{
        display: none;
      }

      .taxSwitch{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.5rem;
        padding:1rem ;
        margin-top: 2rem;
        
      }
      </style>


    <div id="filters">
      <div class="filters">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
    
      <div class="filters">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      
      <div class="filters">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Iconic Cities</p>
      </div>
    
      <div class="filters">
        <div><i class="fa-solid fa-person-skiing"></i></div>
        <p>Arctic</p>
      </div>
      
      <div class="filters">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </div>
    
      <div class="filters">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Peaceful</p>
      </div>
    
      <div class="filters">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castle</p>
      </div>
    
      <div class="filters">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Pools</p>
      </div>
    
      <div class="filters">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camp</p>
      </div>
    
      <div class="filters">
        <div><i class="fa-solid fa-tents"></i></div>
        <p>Tents</p>
      </div>
    
      <div class="filters">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Forest</p>
      </div>
    
      <div class="filters">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>


      <div class="taxSwitch">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="tax">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display Price after Tax</label>
        </div>
      </div>
    
    </div>
    
  
    <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->

    <div class="row  row-cols-lg-3 row-cols-md-2  row-cols-sm-1 row-cols-xs-1" >
      <% for(let listing of allListings) { %>
        <a href="/listings/<%=listing._id%>" class="listing-link">
          <div class="card col">
            <img src="<%=listing.image.url%>" class="card-img-top" alt="Listing_image" style="height: 20rem";>
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b>
                 <br>
                â‚¹<%= listing.price.toLocaleString("en-IN") %>/night</p>
                <i class="tax-i"> &nbsp; +18% GST</i>
            </div>
          </div>
        </a>
        <% } %>
    </div>

  </body>


<script>

  let taxSwitch = document.getElementById('tax');
  tax.addEventListener("click",(req,res) =>{
    let taxinfo = document.getElementsByClassName("tax-i");
    for(info of taxinfo){
      if(info.style.display !="inline"){
        info.style.display = "inline";
      }else{
        info.style.display = "none";
      }
     
    }
  })
</script>
